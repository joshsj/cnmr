{% extends "main.twig" %} {% block content %}
<h1>Our Cinemas</h1>
{% for c in cinemas %}
<section class="ruled">
  <h2>{% if c.area is defined %}{{ c.area }}, {% endif %}{{ c.city }}</h2>

  <b>Facilities</b>
  <p>{% if c.shop is defined %}Shop{% else %}None{% endif %}</p>

  <b>Find Us</b>
  <address>
    <p>{{ c.area }}</p>
    <p>{{ c.address }}</p>
    <p>{{ c.city }}</p>
    <p>{{ c.postcode }}</p>
  </address>
</section>
{% endfor %} {% endblock %}
