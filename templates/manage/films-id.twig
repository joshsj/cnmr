{% extends "manage/main.twig" %} {% block head %}
<script src="/scripts/manage/genre.js"></script>
{% endblock %} {% block content %}
<h1>Film: {{ film.title }}</h1>
<section class="ruled">
  <form action="/manage/films/{{ film.id }}/update" method="POST">
    {# name=cnmr.film.column_name #}
    <table>
      <tr>
        <td>ID</td>
        <td>{{ film.id }}</td>
      </tr>
      <tr>
        <td>Title</td>
        <td><input name="title" value="{{ film.title }}" required /></td>
      </tr>
      <tr>
        <td>Description</td>
        <td>
          <textarea name="description" rows="5" cols="40" required>{{
            film.description
          }}</textarea>
        </td>
      </tr>
      <tr>
        <td>Released</td>
        <td>
          <input
            name="released"
            type="date"
            value="{{ film.released }}"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Runtime</td>
        <td>
          <input
            name="runtime"
            value="{{ film.runtime }}"
            type="number"
            min="1"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Certificate</td>
        <td>
          <input name="certificate" value="{{ film.certificate }}" required />
        </td>
      </tr>
      <tr>
        <td>Director</td>
        <td>
          <input name="director" value="{{ film.director }}" required />
        </td>
      </tr>
      <tr>
        <td>Adult Price</td>
        <td>
          £
          <input
            name="price_adult"
            value="{{ film.price_adult }}"
            type="number"
            min="0"
            step="0.1"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Adult Child</td>
        <td>
          £
          <input
            name="price_child"
            value="{{ film.price_child }}"
            type="number"
            min="0"
            step="0.1"
            required
          />
        </td>
      </tr>
      <tr>
        <td>Adult Student</td>
        <td>
          £
          <input
            name="price_student"
            value="{{ film.price_student }}"
            type="number"
            min="0"
            step="0.1"
            required
          />
        </td>
      </tr>

      <tr>
        <td>Genres</td>
        <td>
          {% for genre in genres %}
          <div>
            {# check box if film has genre - square brackets required for POST
            array #}
            <input
              id="genre-{{ genre.id }}"
              name="genres[]"
              type="checkbox"
              value="{{ genre.id }}"
              {%
              if
              genre.film_has
              %}checked{%
              endif
              %}
            /><label for="genre-{{ genre.id }}">{{ genre.name }}</label>
          </div>
          {% endfor %}
        </td>
      </tr>
    </table>

    <input type="submit" value="Update" />
  </form>
</section>
<section class="ruled">
  <p>{{ msg }}</p>
</section>
{% endblock %}
